{
  "name": "affirmations-app",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "emulators": "firebase emulators:start",
    "dev:emulators": "firebase emulators:start --only auth,firestore",
