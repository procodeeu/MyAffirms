    "dev:bg": "nohup npm run dev > dev.log 2>&1 &"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "firebase-tools": "^14.8.0",
    "nuxt": "^3.13.0"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "^6.0.0",
    "@pinia/nuxt": "^0.5.0",
    "firebase": "^11.9.1"
  }
}
