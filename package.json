  "dependencies": {
    "@nuxtjs/i18n": "^9.5.6",
    "@nuxtjs/tailwindcss": "^6.0.0",
    "@pinia/nuxt": "^0.5.0",
    "axios": "^1.10.0",
    "firebase": "^11.9.1",
    "lucide-vue-next": "^0.522.0"
