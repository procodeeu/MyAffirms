{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".nuxt/**", "dist/**", ".output/**", "build/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "FIREBASE_PROJECT_ID", "GOOGLE_CLOUD_API_KEY", "PADDLE_ENVIRONMENT"]
    },
    "dev:full": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["emulators"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "clean": {
      "cache": false
    },
    "clean:users": {
      "cache": false
    },
    "emulators": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [
    "**/.env.*local",
    ".env",
    "turbo.json"
  ]
}